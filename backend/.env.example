# plantilla pública de variables de entorno
# copia este archivo como .env.local o .env.production y rellena con tus valores

# postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=betting_db
DATABASE_URL=postgres://postgres:password@localhost:5432/betting_db

# redis local (tcp)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# upstash redis (solo producción, rest por https)
# si estas dos existen, la app usa upstash automáticamente
# UPSTASH_REDIS_REST_URL=https://your-id.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-token-here

# aplicación
APP_ENVIRONMENT=local
APP_PORT=8000
APP_HOST=127.0.0.1
